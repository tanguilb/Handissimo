{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/organizations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/organedit.css') }}">
{% endblock %}

{% block body %}
    <div class="head-img"></div>
    <div class="container main-block">
        <div class="container-info row">
            <!-- Block Title-->
            <div class="head-block">
                <div class="row ">
                    <p class="update">Avant de créer une fiche veuillez vérifier que celle-ci nexiste pas!</p>
                </div>

            </div>
        </div>
        {% block organization_form %}
            <form method="POST" action="{{path('organizations_new')}}" id="form_body">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="container">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#identity" aria-controls="identity" role="tab" data-toggle="tab" class="link-about">Identité</a></li>
                        <li role="presentation"><a href="#publictarget" aria-controls="publictarget" role="tab" data-toggle="tab" class="link-about">Public ciblé</a></li>
                        <li role="presentation"><a href="#serve" aria-controls="serve" role="tab" data-toggle="tab" class="link-about">Les services proposés</a></li>
                        <li role="presentation"><a href="#team" aria-controls="team" role="tab" data-toggle="tab" class="link-about">L'équipe</a></li>
                        <li role="presentation"><a href="#informations" aria-controls="informations" role="tab" data-toggle="tab" class="link-about">Informations pratiques</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active row" id="identity" >
                            <div class="col-md-5">
                                {{ form_row(form.name) }}
                                {{ form_errors(form.name) }}
                                {{ form_row(form.structureLogo) }}
                                {{ form_errors(form.structureLogo) }}
                                {{ form_row(form.society) }}
                                {{ form_errors(form.society) }}
                                {{ form_row(form.societyLogo) }}
                                {{ form_errors(form.societyLogo) }}
                                {{ form_row(form.address) }}
                                {{ form_errors(form.address) }}
                                {{ form_row(form.addressComplement) }}
                                {{ form_errors(form.addressComplement) }}
                                {{ form_row(form.postal) }}
                                {{ form_errors(form.postal) }}
                                {{ form_row(form.city) }}
                                {{ form_errors(form.city) }}
                                {{ form_row(form.phone_number) }}
                                {{ form_errors(form.phone_number) }}
                                {{ form_row(form.mail) }}
                                {{ form_errors(form.mail) }}
                                {{ form_row(form.directorName) }}
                                {{ form_errors(form.directorName) }}
                                {{ form_row(form.website) }}
                                {{ form_errors(form.website ) }}
                                {{ form_row(form.facebook) }}
                                {{ form_errors(form.facebook) }}
                                {{ form_row(form.brochure) }}
                                {{ form_errors(form.brochure) }}
                            </div>
                            <div class="col-md-7">
                                <h3>Choissisez votre type de structure</h3>
                                {% for form in form.orgaStructure %}
                                    <div>
                                        {{ form_widget(form) }}
                                        {{ form_label(form) }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="publictarget">
                            <div class="row">
                                <div class="col-md-7">
                                    {% for disability in form.disabilitytypes %}
                                        <div>
                                            {{ form_widget(disability) }}
                                            {{ form_label(disability) }}
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="col-md-5">
                                    <h3>Âge des personnes accueillies</h3>

                                    <div class="col-md-6">
                                        {{ form_row(form.agemini) }}
                                    </div>

                                    <div class="col-md-6">
                                        {{ form_row(form.agemaxi) }}
                                    </div>
                                    {{ form_row(form.freeplace) }}
                                    {{ form_row(form.interventionZone) }}

                                </div>
                            </div>
                            {{ form_row(form.organizationDescription) }}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="serve">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_label(form.needs) }}
                                    {% for needs in form.needs %}
                                        <div>
                                            {{ form_widget(needs) }}
                                            {{ form_label(needs) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.secondneeds) }}
                                    {% for secondneeds in form.secondneeds %}
                                        <div>
                                            {{ form_widget(secondneeds) }}
                                            {{ form_label(secondneeds) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {{ form_row(form.workingDescription) }}
                            {{ form_row(form.accomodation) }}
                            {{ form_row(form.accomodationDescription) }}
                            {{ form_row(form.school) }}
                            {{ form_row(form.schoolDescription) }}
                            {{ form_row(form.dayDescription) }}
                            {{ form_row(form.receptionDescription) }}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="team">

                            {{ form_row(form.teamMembersNumber) }}
                            <div class="row">
                                <div class="col-md-4">
                                    {{ form_label(form.stafforganizations) }}
                                    {% for staff in form.stafforganizations %}
                                        <div>
                                            {{ form_widget(staff) }}
                                            {{ form_label(staff) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.socialstaffs) }}
                                    {% for social in form.socialstaffs %}
                                        <div>
                                            {{ form_widget(social) }}
                                            {{ form_label(social) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-4">
                                    {{ form_label(form.otherjobs) }}
                                    {% for other in form.otherjobs %}
                                        <div>
                                            {{ form_widget(other) }}
                                            {{ form_label(other) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {{ form_row(form.commentStaff) }}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="informations">

                            {{ form_row(form.openhours) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {% for days in form.opendays %}
                                        <div>
                                            {{ form_widget(days) }}
                                            {{ form_label(days) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-6">
                                    {% for daysYear in form.opendaysYear %}
                                        <div>
                                            {{ form_widget(daysYear) }}
                                            {{ form_label(daysYear) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {{ form_row(form.inscription) }}
                            {{ form_row(form.cost) }}
                            {{ form_row(form.transport) }}

                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <input id="send-message" type="submit" class="btn btn-default" value="Envoyer" />
                    <button id="send-cancel" type="button" class="btn btn-default orange-btn" data-dismiss="modal">Annuler</button>
                </div>
                <input type="submit" value="envoyer"/>

                {{ form_end(form) }}

            </form>

        {% endblock organization_form %}
    </div>
{% endblock %}

{% block javascript %}
    link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}