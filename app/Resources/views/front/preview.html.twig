                                                <span class="bold">{{ values.teamMembersNumber }}</span>
                                            {% else %}
                                                <i class="question fa fa-question" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Nous n'avons pas encore cette information"></i>
                                            {% endif %}
