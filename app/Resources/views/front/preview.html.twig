                    {#{% include 'front/carousel.html.twig' %}#}

                </div>
                <!-- Map -->
                <div class="col-md-4 map-block">
                    <div class="map col-md-12" id="map">
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Essential Block -->
                <div class="essential-block col-md-8">
