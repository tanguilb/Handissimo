{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block body %}
    <section class="container-fluid" id="main-index">
        <div class="container">
            <h1 id="title-index">Trouvez rapidement la solution adaptée au handicap de votre enfant, de votre proche, ou pour vous</h1>
            <div class="col-md-10 col-md-offset-1">
                <h2>Handissimo vous facilite le handicap !</h2>
            </div>
        </div>
        <div class="container" id="search-container">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-xs-12 col-md-4 clear">
                    <div class="col-xs-12 search-field">
                        <p>Où cherchez-vous ?<i class="fa fa-map-marker" aria-hidden="true" id="marker"></i></p>
                        {{ form_row(form.postal, { 'attr': {'placeholder': 'Lyon (69000), Paris (75000)…', 'class' : 'homeField'} }) }}
                        <ul id="city"></ul>
                    </div>
                </div>

                <div class="col-xs-12 col-md-4">
                    <div class="col-xs-12 search-field">
                        <p>Pour quelqu’un de quel âge ?<i class="fa fa-birthday-cake" aria-hidden="true"></i></p>
                        {{ form_row(form.age, { 'attr': {'placeholder': 'input.age'|trans({}, 'messages'), 'class' : 'homeField'} }) }}
                    </div>
                </div>

                <div class="col-xs-12 col-md-4">
                    <div class="col-xs-12 search-field">
                        <p>Que cherchez-vous ?<i class="fa fa-search" aria-hidden="true"></i></p>
                        {{ form_row(form.need, { 'attr': {'placeholder': 'Répit, scolarité pour enfant autiste, foyer de vie...', 'class' : 'homeField'} }) }}
                        <ul id="keywordautocomplete"></ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="col-xs-12">
                        {{ form_row(form.disability) }}
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="col-xs-12">
                        {{ form_row(form.structure) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            {{ form_row(form.save, { 'label': 'Trouvez votre solution', 'class': 'btn' }) }}
            {{ form_end(form) }}
        </div>
    </section>
    <section class="container-fluid" id="headband-solution">
        <div class="row">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <h2 class="headband-title">Vous connaissez une solution ? Vous êtes responsable d’une solution ?
                Inscrivez-la sur Handissimo pour la partager avec tous.</h2>
                <div id="services-items">
                    <div class="row">
                        <div class="col-sm-4 col-xs-12">
                            <a href="{{ path('handissimo_structure') }}" id="solution-one">
                                <img class="picto" src="{{ asset('images/Pictogramme_bleu_interactif.png') }}" alt="Je connais une solution"/>
                                <h3 class="link">Handissimo est collaboratif.<br><br>
                                Les familles et les professionnels contribuent.</h3>
                            </a>
                        </div>

                        <div class="col-sm-4 col-xs-12">
                            <a href="{{ path('handissimo_aboutpage') }}" id="solution-two">
                                <img src="{{ asset('images/photo2.jpeg') }}" alt="Qui sommes nous?" />
                                <h3>Handissimo est interactif</h3>
                                <p>Complétez, commentez, posez des questions…</p>
                            </a>
                        </div>

                        <div class="col-sm-4 col-xs-12">
                            <a href="#" id="solution-three">
                                <img src="{{ asset('images/photo3.jpeg') }}" alt="Comment nous aider?" />
                                <h3>Handissimo est en construction</h3>
                                <p>Nous avons besoin de vous !</p>
                            </a>
                        </div>
                    </div>
                    <div class="container" id="block-call">
                        <button class="btn" id="btn-call">Inscrire une solution(c’est gratuit)</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="container-fluid" id="headband-stats">
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="row">
                    <div class="col-md-12 col-xs-2">
                        <div class="nb-stat">{{ statUser|length }}</div>
                    </div>
                    <div class="col-md-12 col-xs-10">
                        <p class="stat-content">Utilisateurs enregistrés sur le site</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="row">
                    <div class="col-md-12 col-xs-2">
                        <div class="nb-stat">{{ statOrganizations }}</div>
                    </div>
                    <div class="col-md-12 col-xs-10">
                        <p class="stat-content">Solutions de répertoriées</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                <div class="row">
                    <div class="col-md-12 col-xs-2">
                        <span class="nb-stat">?</span>
                    </div>
                    <div class="col-md-12 col-xs-10">
                        <p class="stat-content">Bénévoles participent à la vie du site</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="container-fluid" id="headband-news">
        <div class="row">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <h2 class="headband-title" id="title-news">Les actualités de Handissimo</h2>
                <div class="news-content">
                    <div class="row">
                        <div class="col-sm-4 col-xs-12"  id="video">
                            <p>Handissimo en 3 min ?</p>
                            <div class="embed-responsive embed-responsive-16by9">
                                <video src="{{ asset('images/Cavernae_Terragen2.mp4') }}" controls="controls" typeof="video"></video>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12">
                            <p>Les dernières solutions inscrites sur Handissimo</p>
                            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    {% for images in carousel %}
                                        <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}" {% if loop.index0 == 0 %} class="active" {% endif %}></li>
                                    {% endfor %}
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    {% for images in carousel %}
                                        <div {% if loop.index0 == 0 %} class="item active" {% else %} class="item" {% endif %}>
                                            <a href="{{ path('structure_page', {'id': images.organizationsImg.id}) }}" class="block-img">
                                                <img id="img-carousel" src="{{ asset(images.webPath) }}" alt="Je connais une solution"/>
                                                <div class="carousel-caption">
                                                    <h3>{{ images.organizationsImg.name }}</h3>
                                                    <p>{{ images.organizationsImg.postal }} {{ images.organizationsImg.city }}</p>
                                                </div>
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12" id="block-img-week">
                            <p>Quoi de neuf ?</p>
                            <img class="img-thumbnail zoom" id="img-week" src="{{ asset('images/photo4.png') }}" alt=" Handissimo - L'image de la semaine"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="container-fluid" id="headband-social">
        <div class="col-xs-12 col-md-4">
            <a href="https://www.facebook.com/Handissimo-934218853377525/" target="_blank" id="facebook-link"><p class="content-social">Suivez-nous sur Facebook</p></a>
        </div>
        <div class="col-xs-12 col-md-4">
            <a href="https://twitter.com/Handissimo_2017" target="_blank" id="twitter-link"><p class="content-social">ou sur Twitter</p></a>
        </div>
        <div class="col-xs-12 col-md-4">
            <p class="content-social">pour avoir d’autres actualités !</p>
        </div>
    </section>
{% endblock %}