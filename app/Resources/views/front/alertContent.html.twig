<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#alert_content">Small modal</button>

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="alert_content">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ahhh</h4>
            </div>
            <div class="modal-body">
                <form method="post" class="ajaxForm" action="{{ path('alert_content_create', {'id': organization.id }) }}" id="form_body">
                        {{ form_start(alertForm) }}
                        {{ form_errors(alertForm) }}
                        <div class="col-xs-12">
                            {{ form_label(alertForm.choice) }}
                        </div>
                        <div class="col-xs-12">
                            {{ form_widget(alertForm.choice) }}
                        </div>
                        <div class="col-xs-12">
                            {{ form_row(alertForm.description) }}
                        </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn modal-button" value="Envoyer">
                        <button type="button" class="btn modal-button" data-dismiss="modal">Fermer</button>
                    </div>
                    {{ form_end(alertForm) }}
                </form>
            </div>
        </div>
    </div>
</div>