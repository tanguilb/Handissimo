{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Qui sommes nous ?{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/about.css') }}">
{% endblock %}

{% block body %}
    <!-- Head block -->
    <div class="head-block"></div>
    <div class="container main-block">
        <div class="row">
            <h1 class="title main-title">Qui sommes-nous ?</h1>

            <div class="img-block">
                <img src="{{ asset('images/about3.jpeg') }}" alt="" class="img-responsive">
            </div>
        </div>
        <!-- Text block -->
        <div class="text-content description">
            {% for use in whoAreWe %}
                {{ use.whoAreWe|raw }}
            {% endfor %}
        </div>
    </div>
{% endblock body %}