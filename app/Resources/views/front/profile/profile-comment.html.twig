{% extends '@SonataUser/Profile/action.html.twig' %}

{% block sonata_profile_content %}
    <div class="title-block">
        <h3 class="title-search">Liste de mes commentaires</h3>
    </div>
    <div class="block-profile-comments">
        {% for comment in comments %}
            <a href="{{ path('structure_page', {'id':comment.organizationsComment.id}) }}" class="link-about"><h3>{{ comment.organizationsComment.name }}</h3></a>
            <h4>{{ comment.title }}</h4>
            <small class="italic">{{ comment.parutionDate|localizeddate }}</small>
            <p>{{ comment.content}}</p>
        {% endfor %}
    </div>
{% endblock %}