{% extends '@SonataUser/Profile/action.html.twig' %}

{% block sonata_profile_content %}
    <div class="title-block">
        <h3 class="title-search">Liste des contributeurs</h3>
    </div>
    <div class="block-profil-list">
        <div class="col-md-4 title-column">Utilisateur</div>
        <div class="col-md-4 title-column">Dernière mise à jour</div>
        <div class="col-md-4 title-column">Nombre de contribution</div>
        {% for user in result %}
            <div class="col-md-4">
                {{ user.user }}
            </div>
            <div class="col-md-4">
                {{ user.updatedate }}
            </div>
            <div class="col-md-4">
                {{ user.contribution }}
            </div>
        {% endfor %}
    </div>
    <div class="block-btn-profile">
        <a href="{{ path('handissimo_profile_list_contributor') }}" class="btn btn-default" id="btn-detail">Retour</a>
    </div>
{% endblock %}