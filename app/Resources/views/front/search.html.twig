{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Voici les résultats de votre recherche.{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/search.css') }}">
{% endblock %}
{% block body %}
    <section class="container-fluid blue" id="search-reminder">
        <div class="row">
            <div id="search-done">
                <div class="col-xs-12">
                    <h3>Votre recherche:</h3>
                </div>
                <div class="col-xs-12 col-md-2">
                    {% if location %}<p>Lieu : {{ location }}</p>{% endif %}
                </div>
                <div class="col-xs-12 col-md-2">
                    {% if age %}<p>Pour une personne  : {{ age }} ans</p>{% endif %}
                </div>
                <div class="col-xs-12 col-md-2">
                    {% if need %}
                    <p data-toggle="tooltip" data-placement="bottom" title="{{ need }}">
                        Ce que vous cherchez : {{ need|length > 15 ? need|slice(0,15)~'....' : need}}
                    </p>
                    {% endif %}
                </div>
                <div class="col-xs-12 col-md-2">
                    {% if disability %}
                    <p data-toggle="tooltip" data-placement="bottom" title="{{ disability.disabilityName }}">
                        Le type de handicap : {{ disability.disabilityName|length > 15 ? disability.disabilityName|slice(0,15)~'...' : disability.disabilityName }}
                    </p>
                    {% endif %}
                </div>
                <div class="col-xs-12 col-md-2">
                    {% if structure %}
                    <p data-toggle="tooltip" data-placement="bottom" title="{{ structure.name }}">
                        Le type de structure : {{ structure.name|length > 15 ? structure.name|slice(0,15)~'...' : structure.name }}
                    </p>
                    {% endif %}
                </div>
                <div class="col-xs-12 col-md-2">
                    <a href="{{ path('index_action') }}" >
                        <button class="btn orange-btn" id="btn-return">Retour à votre recherche</button>
                    </a>
                </div>
            </div>
        </div>
    </section>


    <section class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="row" id="block-map">
                    <div id="map" class="img-responsive"></div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="row" id="headband-pagination">
                    <div class="col-xs-12 col-sm-12 col-md-3">
                        <h4 id="count-results">{{ pagination.getTotalItemCount }} résultat(s) triés par distance</h4>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-9">
                            {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
                {% for results in pagination %}
                    <div class="row" id="result-container">
                        <div class="col-sm-5">
                            <a href="{{ path('structure_page', {'id': results.id}) }}">
                            {% if results.firstPicture != null %}
                                <img src="{{ asset('uploads/first_image/' ~ results.firstPicture) }}" class="img-responsive" alt="Photographie par défaut" id="img-search">
                            {% else %}
                                {% if results.stid == null %}
                                    <img src="{{ asset('images/etablissement/Etablissement.jpeg') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 1 %}
                                    <img src="{{ asset('images/etablissement/Etablissemt_enfants_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 2 %}
                                    <img src="{{ asset('images/etablissement/Etablissemt_Adulte_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 3 %}
                                    <img src="{{ asset('images/etablissement/Reseau_entraide_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 4 %}
                                    <img src="{{ asset('images/etablissement/Administration_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 5 %}
                                    <img src="{{ asset('images/etablissement/Centre_ressources_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 6 %}
                                    <img src="{{ asset('images/etablissement/Etablissemt_Petiteenfance_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 7 %}
                                    <img src="{{ asset('images/etablissement/Ecole_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 8 %}
                                    <img src="{{ asset('images/etablissement/Equipe_mobile_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 9 %}
                                    <img src="{{ asset('images/etablissement/Service_enfants.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 10 %}
                                    <img src="{{ asset('images/etablissement/Service_adultes.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% elseif results.stid == 11 %}
                                    <img src="{{ asset('images/etablissement/Hopitaux_OK.png') }}" class="img-responsive" alt="Photographie par défaut" id="img-search"/>
                                {% endif %}
                            {% endif %}
                            </a>
                        </div>
                        <div class="col-sm-7">
                            <div class="col-xs-12">
                                <div class="row">
                                    <a href="{{ path('structure_page', {'id': results.id}) }}"><h4 class="searchtitre">{{ results.name }}</h4></a>
                                </div>
                            </div>
                            <div class="col-xs-12" id="address-container">
                                <p>{{ results.address }}<br>
                                    {{ results.postal }} {{ results.city }}</p>
                            </div>
                            <div class="col-xs-12" id="social-container">
                            </div>
                        </div>


                    </div>
                {% else %}
                <div class="col-xs-12">
                    <div class="row">
                        <p class="result-null">Il n’y a pas de résultat pour le moment. Vous pouvez essayer d’élargir votre recherche.
                            Dans tous les cas, n’hésitez pas à revenir souvent pour voir les mises à jour.</p>
                        <p class="result-null">Si vous connaissez une solution répondant à vos critères, n’hésitez pas à
                            <a href="{{ path('organizations_new') }}" class="link-about">créer une fiche</a>.</p>
                    </div>
                </div>
                {% endfor %}
                {% for markerMap in result %}
                    {% set array = {
                    'id' : markerMap.id,
                    'name': markerMap.name,
                    'address': markerMap.address,
                    'postal': markerMap.postal,
                    'city': markerMap.city,
                    'number': markerMap.phoneNumber,
                    'mail': markerMap.mail,
                    'web': markerMap.website,
                    'latitude': markerMap.latitude,
                    'longitude': markerMap.longitude,
                    }
                    %}

                    {% set arrayjson = array|json_encode %}
                    <input type="hidden" class="arrayjson" value="{{ arrayjson }}" />
                {% endfor %}
                <div class="col-xs-12">
                    <div class="row navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="{{ asset ('js/googlemap.js')}}"></script>
    <script type="text/javascript" src="{{ asset ('js/search.js')}}"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAT1ybqTsqE0Nzit6xL7PfZWcgnLmThfXc&callback=initMap">
    </script>
{% endblock %}