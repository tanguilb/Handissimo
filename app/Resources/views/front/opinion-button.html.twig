{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/modal.css') }}">
{% endblock %}

<!-- Button trigger modal -->
<button type="button" class="btn modal-button" data-toggle="modal" data-target="#giveOpinion">
    <i class="fa fa-bullhorn" aria-hidden="true"></i> Votre avis nous intéresse
</button>

<!-- Modal -->
<div class="modal fade" id="giveOpinion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Votre avis est important pour nous.</h4>
            </div>
            <div class="modal-body">
                <p>Nous sommes heureux de vous compter parmi les utilisateurs de notre site. Quoi de mieux pour améliorer votre expérience que de vous demander ce que vous en pensez !</p>

                <div class="form_error"></div>
                <form method="POST" class="ajaxForm" action="{{path('opinion_create')}}" id="form_body">
                    {{ form_start(form) }}
                        {{ form_row(form.firstName, { 'label': 'Prénom :' }) }}
                        {{ form_row(form.lastName, { 'label': 'Nom :' }) }}
                        {{ form_row(form.eMail, { 'label': 'Adresse e-mail :' }) }}
                        {{ form_row(form.message, { 'label': 'Votre avis :' }) }}
                        <div class="modal-footer">
                            <input id="send-message" type="submit" class="btn btn-default" value="Envoyer" />
                            <button id="send-cancel" type="button" class="btn btn-default orange-btn" data-dismiss="modal">Annuler</button>
                        </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
</div><!-- Modal End -->