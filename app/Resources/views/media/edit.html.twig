{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/organizations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/organedit.css') }}">
{% endblock %}
{% block body %}
<div class="head-img"></div>
<div class="container main-block">
    <div class="container-info row">
        <!-- Block Title-->
        <div class="head-block">
            <div class="row ">
                <p class="update">Avant de créer une fiche veuillez vérifier que celle-ci nexiste pas!</p>
            </div>

        </div>
    </div>
    <h1>Medium edit</h1>
    <form method="POST" action="{{path('media_edit', {'id': medium.id})}}" id="form_body" enctype="multipart/form-data">
        <img src="{{ asset(medium.thumbnails) }}">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form.caroussel) }}
        {{ form_label(edit_form.caroussel) }}
        {{ form_widget(edit_form.firstPicture) }}
        {{ form_label(edit_form.firstPicture) }}
        {{ form_row(edit_form.file, {'attr': {'style': 'display:none'}}) }}
        <input type="submit" value="Edit" />
        {{ form_end(edit_form) }}

    </form>
    <ul>
        <li>
            <a href="{{ path('media_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
