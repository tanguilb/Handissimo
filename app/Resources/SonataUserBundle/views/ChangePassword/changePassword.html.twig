<div class="head-block"></div>
<div class="main-block container">
    <div class="row">
        <div class="col-md-12">

            <div class="title-block">
                <h2 class="password-title">{{ 'sonata_change_password_link'|trans({}, 'SonataUserBundle') }}</h2>
            </div>
        {% block sonata_profile_content %}
