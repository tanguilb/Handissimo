{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="span6 col-md-6">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'title_user_edit_authentication'|trans({}, 'SonataUserBundle') }}</h2>
                </div>
                <div class="panel-body">
                    {% include "SonataUserBundle:Profile:edit_authentication_content.html.twig" %}
                </div>
            </div>
        </div>
        <div class="span6 col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'sonata_change_password_link'|trans({}, 'SonataUserBundle') }}</h2>
                </div>
                <div class="panel-body">
                    {% render url("sonata_user_change_password") %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}