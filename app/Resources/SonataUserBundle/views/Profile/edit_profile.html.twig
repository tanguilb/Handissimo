{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}

    {{ form_errors(form) }}

    {% form_theme form _self %}

    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">{{ "title_user_account" | trans({}, 'SonataUserBundle')}}</h2>
        </div>
        <div class="panel-body">
            <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal">
                {{ form_errors(form.gender) }}
                {{ form_widget(form.gender, {'attr': {'class': 'form-control form2'}}) }}
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control form2', 'placeholder': 'form.label_firstname'|trans({}, 'SonataUserBundle') ~' *' }}) }}
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control form2', 'placeholder': 'form.label_lastname'|trans({}, 'SonataUserBundle') ~' *' }}) }}
                {{ form_errors(form.website) }}
                {{ form_widget(form.website, {'attr': {'class': 'form-control form2', 'placeholder': 'form.label_website'|trans({}, 'SonataUserBundle') ~' *' }}) }}
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control form2', 'placeholder': 'form.label_phone'|trans({}, 'SonataUserBundle') ~' *' }}) }}
                <button type="submit" name="submit"  class="btn btn-primary pull-right">{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}</button>
            </form>
        </div>
    </div>

    {% render url("sonata_user_profile_edit_authentication") %}
{% endblock %}
